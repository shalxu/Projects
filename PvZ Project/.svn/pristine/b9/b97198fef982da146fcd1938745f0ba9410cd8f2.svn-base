import java.awt.Image;

import javax.swing.ImageIcon;

/**
 * A general subject class, characterized by all elements that has a x,y location, a health value and a graphic icon.
 * @author Shal Xu& Riley Manifold
 *
 */
public abstract class Subject 
{
	/**
	 * X location of subject.
	 */
	protected int x;
	/**
	 * Y location of subject.
	 */
	protected int y;
	/**
	 * Health value of subject, decreases if attacked
	 */
	protected int health;
	/**
	 * A representative graphic Imageicon
	 */
	protected ImageIcon image;
	/**
	 * Returns the image this subject is represented in.
	 * @return this subject's image.
	 */
	protected Image getImage()
	{
		return image.getImage();
	}
	/**
	 * Returns the x location of this subject.
	 * @return x location.
	 */
	protected int getX()
	{
		return x;
	}
	/**
	 * Returns the y locataion of this subject.
	 * @return y location.
	 */
	protected int getY()
	{
		return y;
	}
	/**
	 * Returns health value of this subject.
	 * @return health value.
	 */
	protected int getHealth()
	{
		return health;
	}
}
